@model IEnumerable<DioSeriesWebMvc.Models.Gymming>

@{
    ViewData["Title"] = "Gymmings";
}

<h2>@ViewData["Title"]</h2>

<p>Gymmings index page</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
         <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a asp-action="Edit" aps-route-id="@item.Id">Edit</a>
                <a asp-action="Details" aps-route-id="@item.Id">Details</a>
                <a asp-action="Delete" aps-route-id="@item.Id">Delete</a>
            </td>
         </tr>
        }
    </tbody>

</table>

